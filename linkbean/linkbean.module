/**
 * Implements hook_bean_types_api_info().
 */
function linkbean_bean_types_api_info() {
  return array(
    'api' => bean_current_version(),
  );
}

/**
 * Implements hook_bean_types().
 */
function linkbean_bean_types() {
  $plugins = array();
  $plugin_path = drupal_get_path('module', 'linkbean');

  $plugins['linkbean'] = array(
    'label' => t('Links'),
    'handler' => array(
      'class' => 'LinkBean',
      'parent' => 'BeanPlugin',
    ),
    'path' => $plugin_path,
    'file' => 'LinkBean.class.php',
    'editable' => TRUE,
  );

  return $plugins;
}